<?xml version="1.0" encoding="UTF-8"?>
<server>
  <ssl id="defaultSSLConfig" sslProtocol="SSL_TLSv2" keyStoreRef="defaultKeyStore" trustStoreRef="defaultTrustStore"/>
	<keyStore id="defaultKeyStore" 
	  location="${server.config.dir}/resources/security/keystore/jks/server.jks" 
		password="${ssl_keystore_password}"
		updateTrigger="polled"
		pollingRate="5000ms"
	/>
  <keyStore id="defaultTrustStore"
    location="${server.config.dir}/resources/security/truststore/jks/trusts.jks" 
		password="${ssl_keystore_password}"
		updateTrigger="polled"
		pollingRate="5000ms"
  />
</server>